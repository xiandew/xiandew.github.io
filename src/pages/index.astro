---
import { getCollection } from 'astro:content';
import LandingLayout from "../layouts/LandingLayout.astro";
import FormattedDate from "../components/FormattedDate.astro";

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
).slice(0, 3);
---

<LandingLayout>
	<!-- Hero Section -->
	<section class="hero">
		<!-- Plasma Avatar Container -->

		<div class="site-container">
			<h1>Paul (Xiande) Wen</h1>
			<p class="lead">
				Full Stack + Cloud + AI tech lead building scalable, intelligent, and high-performance software solutions.
			</p>
			

		</div>

		<a href="#expertise" class="scroll-indicator" aria-label="Scroll to expertise">
			<div class="mouse">
				<div class="wheel"></div>
			</div>
			<div class="arrow">
				<span></span>
				<span></span>
				<span></span>
			</div>
		</a>
	</section>


	<!-- Expertise Section -->
	<section id="expertise" class="section">
		<div class="site-container">
			<div class="section-header">
				<div class="subtitle">Skills & Technologies</div>
				<h2>My Expertise</h2>
			</div>

			<div class="expertise-grid">
				<!-- Full Stack -->
				<div class="expertise-card">
					<span class="icon">‚ö°</span>
					<h3>Full-Stack Application Development</h3>
					<p>Building secure, end-to-end web applications with modern frameworks. Focused on performance, testing, and reliability.</p>
					<div class="skills-list">
						<span class="skill-tag">TypeScript</span>
						<span class="skill-tag">React</span>
						<span class="skill-tag">Next.js</span>
						<span class="skill-tag">Jest/Playwright</span>
						<span class="skill-tag">Tailwind</span>
					</div>
				</div>

				<!-- Cloud & Infrastructure -->
				<div class="expertise-card">
					<span class="icon">‚òÅÔ∏è</span>
					<h3>Cloud Infrastructure & Architecture</h3>
					<p>Architecting scalable, secure cloud solutions on AWS. Managing complex pipelines, identity, and infrastructure as code.</p>
					<div class="skills-list">
						<span class="skill-tag">AWS</span>
						<span class="skill-tag">Terraform</span>
						<span class="skill-tag">Docker</span>
						<span class="skill-tag">CI/CD</span>
						<span class="skill-tag">OAuth2/OIDC</span>
					</div>
				</div>

				<!-- AI & Data -->
				<div class="expertise-card">
					<span class="icon">ü§ñ</span>
					<h3>AI-Powered Solutions</h3>
					<p>Implementing AI-driven workflows, intelligent automation, and secure data-intensive applications.</p>
					<div class="skills-list">
						<span class="skill-tag">Python</span>
						<span class="skill-tag">LLM Integration</span>
						<span class="skill-tag">RAG</span>
						<span class="skill-tag">Data Pipelines</span>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Recent Writing (List Layout) -->
	<section class="section">
		<div class="site-container">
			<div class="section-header">
				<div class="subtitle">Thoughts & Notes</div>
				<h2>Recent Writing</h2>
			</div>

			<div class="post-list">
				{posts.map((post) => (
					<a href={`/blog/${post.id}/`} class="post-item">
						<div class="post-meta">
							<FormattedDate date={post.data.pubDate} />
						</div>
						<h3 class="post-title">{post.data.title}</h3>
						<div class="post-arrow">‚Üí</div>
					</a>
				))}
			</div>

			<div style="text-align: center; margin-top: 60px;">
				<a href="/blog" class="btn-primary" style="background: transparent; border: 1px solid var(--border); color: var(--fg);">
					Read All Posts
				</a>
			</div>
		</div>
	</section>
</LandingLayout>
