	<script>
		const avatar = document.querySelector('.ascii-avatar');
		if (avatar) {
			const originalText = avatar.textContent;
			const lines = originalText.split('\n');
			const density = ' .:-=+*#%@';
			
			function animate() {
				const time = Date.now() * 0.0008;
				const newLines = lines.map((line, y) => {
					return line.split('').map((char, x) => {
						// Plasma effect calculation
						const value1 = Math.sin(x * 0.1 + time);
						const value2 = Math.sin(y * 0.1 + time);
						const value3 = Math.sin((x + y) * 0.08 + time);
						const value4 = Math.sin(Math.sqrt(x * x + y * y) * 0.1 + time);
						
						const plasma = (value1 + value2 + value3 + value4) / 4;
						const normalized = (plasma + 1) / 2; // normalize to 0-1
						
						// Get original character brightness
						const originalBrightness = char === ' ' ? 0 : char === '.' ? 0.1 : 
							char === ':' ? 0.2 : char === '-' || char === '=' ? 0.3 :
							char === '+' || char === '*' ? 0.4 : char === '#' ? 0.6 :
							char === '%' || char === '@' ? 0.8 : 0.5;
						
						// Modulate original brightness with plasma
						const finalBrightness = originalBrightness * (0.7 + normalized * 0.6);
						const index = Math.floor(finalBrightness * (density.length - 1));
						
						return density[Math.min(index, density.length - 1)];
					}).join('');
				});
				
				avatar.textContent = newLines.join('\n');
				requestAnimationFrame(animate);
			}
			
			animate();
		}
	</script>
